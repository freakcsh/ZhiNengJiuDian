<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="3"
    android:layout_marginTop="20dp">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:text="Smart Hotel"
        android:textStyle="bold"
        android:gravity="right"
        android:textSize="35sp"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="登陆"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"/>
    <Spinner
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        >
    </Spinner>
</LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/img_login_tx"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/touxiang"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/zhanghao"
            android:id="@+id/imageView" />
        <EditText
            android:id="@+id/edtUser"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:hint="请输入账号"
            android:textSize="25sp"
            android:background="@drawable/kuang"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/mima"
            android:layout_alignParentTop="true"
            android:id="@+id/imageView1" />

        <EditText
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edtPass"
            android:background="@drawable/kuang"
            android:hint="请输入密码"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="210dp"
            android:layout_height="50dp"
             />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginTop="10dp">

            <CheckBox
                android:id="@+id/ch_Remember"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:checked="false"
                android:layout_marginLeft="80dp"
                android:text="记住密码"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/login_Forget"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="忘记密码？"
                android:textSize="18dp"
                />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >
        <ImageButton
            android:onClick="dengLuOnClick"
            android:id="@+id/login_DengLu"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/login"
            />

        <ImageButton
            android:id="@+id/login_ZuCe"
            android:layout_marginLeft="30dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/zhuce"
            android:layout_alignParentTop="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:text="   ------------   第三方登录   ------------"
            android:textSize="20sp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_marginBottom="10dp"
            >
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/qq_login"
            android:id="@+id/imageButton3"
            android:layout_alignParentTop="true"
            />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton2"
            android:background="@drawable/weixin_login"
            android:layout_alignTop="@+id/imageButton3"
            android:layout_marginLeft="15dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton4"
            android:background="@drawable/weibo"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_marginLeft="15dp" />
    </LinearLayout>
</LinearLayout>
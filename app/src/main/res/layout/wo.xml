<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_CONTENT"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray3"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginTop="10dp"
        android:background="@drawable/setting_item_selector"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/head"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tx" />
        </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_weight="5"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1">
               <TextView
                   android:textSize="20sp"
                   android:id="@+id/tvname"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="bottom"
                   android:text="飞鸟"
                   android:textStyle="bold"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/tvmsg"
                   android:textSize="20sp"
                   style="@style/txt_ContextStyle1"
                   android:layout_gravity="top"
                   android:layout_marginTop="5dp"
                   android:text="账号：12345678"
                   android:layout_width="0dp"
                   android:layout_weight="10"
                   android:textStyle="bold"
                   android:layout_height="wrap_content"
                   />
               <ImageView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="20dp"
                   android:layout_gravity="center"
                   android:src="@drawable/right" />
           </LinearLayout>

       </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/txt_usersafe"
        style="@style/TxtTitle"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:background="@drawable/setting_item_selector"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:drawableRight="@drawable/right"
        android:text="@string/wodezhanghao" />
    <View
        android:background="@color/black2"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/yinsibaohu"
        style="@style/TxtTitle"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:background="@drawable/setting_item_selector"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:drawableRight="@drawable/right"
        android:text="隐私" />
    <View
        android:background="@color/black2"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip" />
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/setting"
                style="@style/TxtTitle"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:background="@drawable/setting_item_selector"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/right"
                android:text="设置" />
            <View
                android:background="@color/black2"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fenxiang"
                style="@style/TxtTitle"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:background="@drawable/setting_item_selector"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/right"
                android:text="推荐给好友" />
            <View
                android:background="@color/black2"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fankui"
                style="@style/TxtTitle"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:background="@drawable/setting_item_selector"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/right"
                android:text="意见反馈" />
            <View
                android:background="@color/black2"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_about"
                style="@style/TxtTitle"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:background="@drawable/setting_item_selector"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/right"
                android:text="关于" />
            <View
                android:background="@color/black2"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:padding="20.0dip"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <Button
                android:textColor="@color/white"
                android:id="@+id/btnexit"
                android:background="@drawable/btn_bg_red2"
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:text="退出登录"
                android:textSize="20sp"/>
        </LinearLayout>



    </LinearLayout>




</LinearLayout>


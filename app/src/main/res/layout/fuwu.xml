<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/biaoti">

        <TextView
            android:id="@+id/textView2"
            style="@style/Text.Title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="服务"
            android:gravity="center" />

        <Button
            android:id="@+id/fw_fan_hui"
            style="@style/Text.Title_Button"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/fanhui1"
            android:drawablePadding="6dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:onClick="titleOnClick"
            android:paddingLeft="5dp"
            />

        <Button
            android:id="@+id/shuaxin"
            style="@style/Text.Title_Button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shuaxin1"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:onClick="titleOnClick"
            android:paddingRight="5dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:background="@drawable/fu_bg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:gravity="center">
            <Button
                android:id="@+id/fw_jx"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:background="@drawable/fw"
                android:text="叫醒服务"
                android:textColor="@color/white"
                android:textSize="25sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1">
            <Button
                android:id="@+id/fw_jc"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:background="@drawable/fw"
                android:text="叫餐服务"
                android:textColor="@color/white"
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1">
            <Button
                android:id="@+id/fw_ds"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:background="@drawable/fw"
                android:text="打扫服务"
                android:textColor="@color/white"
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/fw_fj"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:background="@drawable/fw"
                android:text="附近旅游"
                android:textColor="@color/white"
                android:textSize="25sp"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>